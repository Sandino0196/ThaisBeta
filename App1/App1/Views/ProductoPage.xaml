<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Views.ProductoPage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             BackgroundColor="WhiteSmoke"
             Title="Producto">
    <ContentPage.Content>
        <ScrollView BindingContext="{Binding Articulo}">
            <StackLayout Padding="5">
                <Label FontSize="Large" FontAttributes="Bold" Text="{Binding Articulo.Descripcion}" HorizontalOptions="Center" TextColor="Black"></Label>
                <Image Source="{Binding Articulo.Imagen}" HeightRequest="150" HorizontalOptions="Center"></Image>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>